@page "/Account/RegistrationPending"

@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.WebUtilities
@inject NavigationManager NavigationManager

<PageTitle>Registration Pending - Roovia Estate Agent Management</PageTitle>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card mt-5">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h1 class="card-title mb-3">Registration Successful!</h1>
                    <p class="card-text">
                        Thank you for registering with Roovia Estate Agent Management System.
                    </p>
                    <hr>
                    <h3>What happens next?</h3>
                    <p>
                        Your registration is currently pending review by our team. We've sent a confirmation email to <strong>@Email</strong>.
                    </p>
                    <p>
                        Once your account is approved, you'll receive a notification and will be able to fully access the system.
                    </p>
                    <div class="mt-4">
                        <a href="/" class="btn btn-primary">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromQuery]
    private string? Email { get; set; }

    [SupplyParameterFromQuery]
    private string? ReturnUrl { get; set; }
}