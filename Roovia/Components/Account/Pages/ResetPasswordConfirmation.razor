@page "/Account/ResetPasswordConfirmation"
@using Roovia.Components.Layout
@layout BlankLayout

<PageTitle>Reset password confirmation</PageTitle>

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <img src="/images/roovia-logo.png" alt="Roovia Logo" class="auth-logo">
            <h1>Password Reset Complete</h1>
            <h2>Your password has been successfully changed</h2>
        </div>

        <div class="auth-alert auth-alert-success">
            <i class="fal fa-check-circle"></i>
            <div class="auth-alert-content">
                <h3>Success!</h3>
                <p>Your password has been reset successfully. You can now log in with your new password.</p>
            </div>
        </div>

        <a href="Account/Login" class="auth-button">
            <span>Log In Now</span>
            <i class="fal fa-sign-in"></i>
        </a>
    </div>
</div>