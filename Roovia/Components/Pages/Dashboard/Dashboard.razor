@page "/"
@using Microsoft.AspNetCore.Authorization
@using Roovia.Components.Elements

@attribute [Authorize]
@rendermode InteractiveServer

<div class="container my-4">
    <div class="d-flex justify-content-center mb-4">
        <img src="images/roovia-logo.png" alt="Roovia Logo" class="roovia-logo img-fluid" style="width:25%;" />
    </div>

    <div class="mb-4">
        <input type="text" class="form-control shadow-sm" placeholder="Universal Search..." @bind="searchTerm" />
    </div>

    <div class="row g-4">
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    Beneficiaries
                </div>
                <div class="card-body text-center">
                    <i class="fa fa-users display-4 text-primary"></i>
                    <p class="mt-2 fw-semibold">View Beneficiaries</p>
                    <RVButton Text="View"
                              Size="sm"
                              IconLeft="fa fa-eye"
                              ButtonType="primary"
                              OnClick="NavigateToBeneficiaries" />
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    Properties
                </div>
                <div class="card-body text-center">
                    <i class="fa fa-building display-4 text-primary"></i>
                    <p class="mt-2 fw-semibold">View Properties</p>
                    <RVButton Text="View"
                              Size="sm"
                              IconLeft="fa fa-eye"
                              ButtonType="primary"
                              OnClick="NavigateToProperties" />
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    Tenants
                </div>
                <div class="card-body text-center">
                    <i class="fa fa-user-friends display-4 text-primary"></i>
                    <p class="mt-2 fw-semibold">View Tenants</p>
                    <RVButton Text="View"
                              Size="sm"
                              IconLeft="fa fa-eye"
                              ButtonType="primary"
                              OnClick="NavigateToTenants" />
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    Owners
                </div>
                <div class="card-body text-center">
                    <i class="fa fa-user-tie display-4 text-primary"></i>
                    <p class="mt-2 fw-semibold">View Owners</p>
                    <RVButton Text="View"
                              Size="sm"
                              IconLeft="fa fa-eye"
                              ButtonType="primary"
                              OnClick="NavigateToPropertyOwners" />
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    User Management
                </div>
                <div class="card-body text-center">
                    <i class="fa fa-user-cog display-4 text-primary"></i>
                    <p class="mt-2 fw-semibold">Manage Users</p>
                    <RVButton Text="View"
                              Size="sm"
                              IconLeft="fa fa-eye"
                              ButtonType="primary"
                              OnClick="NavigateToUserManagement" />
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string searchTerm = string.Empty;

    [Inject]
    public NavigationManager NavigationManager { get; set; }

    private void NavigateToBeneficiaries()
    {
        NavigationManager.NavigateTo("/beneficiaries");
    }

    private void NavigateToProperties()
    {
        NavigationManager.NavigateTo("/properties");
    }

    private void NavigateToTenants()
    {
        NavigationManager.NavigateTo("/tenants");
    }

    private void NavigateToPropertyOwners()
    {
        NavigationManager.NavigateTo("/propertyowners");
    }

    private void NavigateToUserManagement()
    {
        NavigationManager.NavigateTo("/usermanagement");
    }
}
