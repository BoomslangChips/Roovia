            ContactNumberType.Mobile => "far fa-mobile-alt",
            ContactNumberType.Landline => "far fa-phone-office",
            ContactNumberType.Fax => "far fa-fax",
            ContactNumberType.WhatsApp => "fab fa-whatsapp",
